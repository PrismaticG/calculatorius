<resources>
    <style name="CalculatorButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="NumericButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/button_numeric</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="OperationButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/button_operation</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="SpecialButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/button_special</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

    <style name="EqualsButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/button_equals</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>
</resources>
